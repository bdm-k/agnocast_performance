<launch>
    <node pkg="agnocast_sample_application" exec="talker" output="screen">
        <env name="LD_PRELOAD" value="/opt/ros/humble/lib/libagnocast_heaphook.so:$(env LD_PRELOAD '')" />
        <env name="AGNOCAST_MEMPOOL_SIZE" value="67108864" />  <!-- 64MB-->
        <param name="num_topics" value="1" />
        <param name="use_multithreaded_executor" value="false" />
    </node>
</launch>
